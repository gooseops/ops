services:
  pihole:
    container_name: pihole
    image: pihole/pihole:{{ pihole_image_version }}
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "443:443/tcp"
    environment:
      TZ: '{{ pihole_tz }}'
      FTLCONF_webserver_api_password: '{{ pihole_init_pw }}'
      FTLCONF_dns_listeningMode: 'all'
    volumes:
      - '{{ pihole_data_dir }}:/etc/pihole'
    restart: unless-stopped
